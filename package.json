{
  "name": "nyahaha-bot",
  "version": "0.0.19",
  "description": "The code base for a personal bot.",
  "main": "dist/index.js",
  "scripts": {
    "start": "NODE_ENV=development tsx src/index.ts",
    "start:windows": "set NODE_ENV=development && tsx src/index.ts",
    "start:server": "NODE_ENV=development tsx src/server.ts",
    "lint": "eslint --ext .ts,.tsx ./src",
    "build": "npm run lint && tsc && cp ./src/features/ai/prompt.txt ./dist/features/ai/prompt.txt",
    "build:windows": "npm run lint && tsc",
    "clean": "rm -rf dist/",
    "prepublishOnly": "tsc",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "add-song": "ts-node src/utils/addSong.ts",
    "download-spreads": "ts-node src/utils/downloadSpreads.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/crypto-js": "^4.1.3",
    "@types/express": "^4.17.20",
    "@types/node": "^20.6.3",
    "@types/node-telegram-bot-api": "^0.61.7",
    "@types/opencc-js": "^1.0.1",
    "@types/prompts": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.4.1",
    "prettier": "^3.0.3",
    "tsx": "^4.19.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.17.1",
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.10",
    "express": "^4.18.2",
    "firebase-admin": "^12.1.0",
    "marked": "^14.1.0",
    "node-telegram-bot-api": "^0.66.0",
    "openai": "^4.95.1",
    "opencc-js": "^1.0.5",
    "prompts": "^2.4.2",
    "rcon-srcds": "^2.1.0",
    "short-uuid": "^4.2.2",
    "winston": "^3.10.0"
  }
}
